<!DOCTYPE html>
<html>
<head>
  <title>Eldercation</title>
	<script src="https://maps.googleapis.com/maps/api/js?libraries=places"></script>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body class="document-body">
	<div class="nav-bar">
		<nav class="navbar navbar-inverse navbar-fixed-top row">
			<div class="col-sm-4 login-logout-btns">
		 		<% if user_signed_in? %>
					<%= link_to("Log out", "/users/sign_out" , class: "btn btn-default", method: "delete") %>
				<% else %>
			 		<%= link_to "Login", "/users/sign_in", class: "btn btn-default" %>
			 		<%= link_to "Sign up", "/users/sign_up", class: "btn btn-default" %>
				<% end %>
		 	</div>

			<div class="col-sm-4 search-box">
				<% if current_page?("/forum_threads") %>
		 			<form action="/specialists">
						<input class="js-search-bar" type="text" name="search-bar" placeholder="Search conditions">
					</form>
				<% else %>
					<div class="col-sm-4 empty box"></div>
				<% end %>	
			</div>
			<div class="col-sm-4 forum-btn">
				<a href="/forum_threads" class="btn btn-default forum-btn">
					Forum
				</a>
			</div>
		</nav>
	</div>

<% if notice %>
  <p class="alert alert-success"><%= notice %></p>
<% end %>
<% if alert %>
  <p class="alert alert-danger"><%= alert %></p>
<% end %>

<%= yield %>

  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
</body>
</html>
