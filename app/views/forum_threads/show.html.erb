<div class="container">
	<div class="row thread-button">
		<a href="/forum_threads" class="pull-right btn btn-default">
			 Forum Threads
		</a>
	</div>
	<div class="row">
		<h1>Forum for:</h1>

		<h2><%= @thread.subject %></h2>
		<ul>
			<% @posts.each_with_index do |pst, index| %>
			<li>
				<%= index %>
				<%= pst.body %>
				<a href="/forum_threads/<%=@thread.id%>/forum_posts/<%=pst.id%>/edit">
					Edit post
				</a>
				<a href="/forum_threads/<%=@thread.id%>/forum_posts/<%=pst.id%>"
					data-method="delete"
					data-confirm="Would you like to delete this post?">
					Delete post
				</a>
			</li>
			<%end%>
		</ul>   
	</div>
	<div class="row"><h1>Add a new Post</h1></div>
	<div class="row">
		<%= form_for [@thread, @thread.forum_posts.new] do |p| %>
			<div class="form-group">
				<%= p.label "Post comment:" %>
				<%= p.text_area :body, class: "form-control" %>
			</div>
			<button class="btn btn-info" type="submit">Post comment</button>
		<%end%>
	</div>
</div>


